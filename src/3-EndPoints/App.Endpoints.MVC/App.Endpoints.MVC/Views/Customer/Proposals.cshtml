@model List<App.Domain.Core.DTO.Proposals.ProposalDto>
@using App.Endpoints.MVC.Extensions
@using App.Endpoints.MVC.Utilities

@{
    Layout = "~/Views/Shared/_CustomerPanelLayout.cshtml";
    ViewData["Title"] = "نمایش پیشنهادات";
}

<h2 class="section-title">لیست پیشنهادات</h2>
<div class="proposals-card">
    @if (Model == null || !Model.Any())
    {
        <p class="no-data">پیشنهادی ثبت نشده است.</p>
    }
    else
    {
        <table class="proposals-table">
            <thead>
                <tr>
                    <th>شماره پیشنهاد</th>
                    <th>شماره سفارش</th>
                    <th>تاریخ سفارش</th>
                    <th>کارشناس</th>
                    <th>مبلغ</th>
                    <th>وضعیت پرداخت</th>
                    <th>سرویس</th>
                    <th>وضعیت پیشنهاد</th>
                    <th>تاریخ اجرا</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var proposal in Model)
                {
                    <tr>
                        <td>@proposal.Id</td>
                        <td>@proposal.OrderId</td>
                        <td>@proposal.OrderDate.ToPersianDate()</td>
                        <td>@proposal.ExpertName</td>
                        <td>@proposal.Price.ToString("N0") تومان</td>
                        <td>@proposal.PaymentStatus</td>
                        <td>@proposal.SubHomeServiceName</td>
                        <td>@proposal.Status.GetDisplayName()</td>
                        <td>@proposal.ExecutionDate.ToPersianDate()</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <a href="@Url.Action("Dashboard", "Customer")" class="btn-back">بازگشت به داشبورد</a>
</div>

<style>
    .section-title {
        color: #1e3a8a;
        font-weight: 700;
        margin-bottom: 30px;
        text-align: center;
    }

    .proposals-card {
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 6px 25px rgba(0,0,0,0.15);
        padding: 25px;
        max-width: 900px;
        margin: 20px auto;
    }

    .no-data {
        text-align: center;
        color: #64748b;
        font-size: 1.1rem;
    }

    .proposals-table {
        width: 100%;
        border-collapse: collapse;
    }

        .proposals-table th, .proposals-table td {
            padding: 12px;
            text-align: right;
            border-bottom: 1px solid #e5e7eb;
        }

        .proposals-table th {
            background: #1e3a8a;
            color: white;
            font-weight: 600;
        }

        .proposals-table td {
            color: #333;
        }

    .btn-back {
        display: inline-block;
        padding: 10px 20px;
        margin-top: 15px;
        background: #4c51bf;
        color: white;
        text-decoration: none;
        border-radius: 8px;
        font-weight: 500;
        transition: background 0.3s ease, transform 0.3s ease;
    }

        .btn-back:hover {
            background: #434190;
            transform: translateY(-2px);
        }
</style>