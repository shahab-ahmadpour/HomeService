@{
    var appUserId = Context.Session.GetInt32("AppUserId");
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>خدمات منزل - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/layout.css">
</head>
<body>
    <header class="header">
        <div class="container">
            <h1 class="logo">خدمات منزل</h1>
            <nav class="nav">
                <a href="@Url.Action("Index", "Home")" class="nav-btn">دسته‌بندی</a>
                <a href="@Url.Action("Order", "Customer")" class="nav-btn">ثبت سفارش</a>
                <form class="search-form" action="@Url.Action("Search", "Customer")" method="get">
                    <input type="text" name="query" class="search-input" placeholder="جستجو کنید...">
                    <button type="submit" class="search-btn"></button>
                </form>
                <a href="@Url.Action("Contact", "Home")" class="nav-btn">تماس با ما</a>
            </nav>
            <div class="auth-section">
                @if (appUserId.HasValue)
                {
                    <form method="post" action="@Url.Action("Logout", "Account")">
                        <button type="submit" class="auth-btn logout-btn">خروج</button>
                    </form>
                }
                else
                {
                    <a href="@Url.Action("Login", "Account")" class="auth-btn login-btn">ورود</a>
                    <a href="@Url.Action("Register", "Account")" class="auth-btn register-btn">ثبت‌نام</a>
                }
            </div>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">
            <p>© 1403 خدمات منزل</p>
        </div>
    </footer>
</body>
</html>